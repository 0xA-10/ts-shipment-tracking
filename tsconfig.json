{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["es2019"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
